{
  "version": 2,
  "builds": [
    {
      "src": "/api/proxy.js",
      "use": "@vercel/node",
      "config": { "maxDuration": 60 }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/proxy.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "functions": {
    "api/proxy.js": {
      "memory": 512,
      "maxDuration": 60
    }
  },
  "github": {
    "silent": true
  },
  "env": {
    "NODE_OPTIONS": "--enable-source-maps"
  },
  "crons": [
    {
      "path": "/api/warmup",
      "schedule": "0 * * * *"
    }
  ]
}