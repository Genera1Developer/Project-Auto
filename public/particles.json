    selector: '.background',
	maxParticles: 200,
	color: ['#00ffff', '#00ffff'],
    connectParticles: true,
    responsive: [
      {
        breakpoint: 768,
        options: {
          maxParticles: 80,
          color: ['#00ffff', '#00ffff'],
          connectParticles: true
        }
