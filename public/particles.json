content: body {
    font-family: 'Arial', sans-serif;
    background-color: #000; /* Dark background for encryption theme */
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    color: #fff; /* Light text for contrast */
}

#particles-js {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1; /* Behind all content */
}

.container {
    background-color: rgba(255, 255, 255, 0.05); /* Semi-transparent container */
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 255, 255, 0.3); /* Glow effect */
    text-align: center;
    width: 80%;
    max-width: 600px;
    border: 1px solid rgba(0, 255, 255, 0.1); /* Neon border */
}

h1 {
    color: #00ffff; /* Cyan color for headings */
    text-shadow: 0 0 5px #00ffff; /* Neon text shadow */
}

#urlInput {
    width: calc(100% - 20px);
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #00ffff; /* Cyan border */
    border-radius: 4px;
    background-color: rgba(0, 0, 0, 0.5); /* Dark input background */
    color: #fff; /* White text color */
}

#proxyButton {
    padding: 10px 20px;
    background-color: #00ffff; /* Cyan button color */
    color: #000; /* Black text color */
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

#proxyButton:hover {
    background-color: #00bfff; /* Lighter cyan on hover */
}

#content {
    margin-top: 20px;
    text-align: left;
    border: 1px solid #00ffff; /* Cyan border */
    padding: 10px;
    border-radius: 4px;
    background-color: rgba(0, 0, 0, 0.5); /* Dark content background */
    color: #fff; /* White text color */
}

.error {
    color: #ff4d4d; /* Red error text */
}

/* Responsive Design */
@media (max-width: 768px) {
    .container {
        width: 95%;
    }

    #urlInput {
        width: calc(100% - 10px);
    }
}