content: body {
    font-family: 'Arial', sans-serif;
    background-color: #000; /* Dark background for encryption theme */
    color: #fff; /* Light text for contrast */
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    overflow: hidden; /* Hide scrollbars caused by particles */
}

.container {
    background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent container */
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.3); /* Neon glow effect */
    text-align: center;
    width: 80%;
    max-width: 600px;
    position: relative; /* Ensure content stays above particles */
    z-index: 1; /* Ensure content stays above particles */
}

h1 {
    color: #00ffff; /* Neon color */
    text-shadow: 0 0 10px rgba(0, 255, 255, 0.8); /* Neon text shadow */
}

#urlInput {
    width: calc(100% - 20px);
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #00ffff; /* Neon border */
    border-radius: 4px;
    background-color: rgba(255, 255, 255, 0.1); /* Transparent input background */
    color: #fff; /* White text */
}

#urlInput::placeholder {
    color: rgba(255, 255, 255, 0.5); /* Faded placeholder text */
}

#proxyButton {
    padding: 10px 20px;
    background-color: #00ffff; /* Neon button color */
    color: #000; /* Black text */
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

#proxyButton:hover {
    background-color: #00bfff; /* Darker neon on hover */
}

#content {
    margin-top: 20px;
    text-align: left;
    border: 1px solid #00ffff; /* Neon border */
    padding: 10px;
    border-radius: 4px;
    background-color: rgba(255, 255, 255, 0.05); /* Very transparent background */
    color: #fff; /* White text */
}

#content p.error {
    color: #ff4136; /* Red error text */
}

/* Responsive Design */
@media (max-width: 768px) {
    .container {
        width: 95%;
    }

    #urlInput {
        width: calc(100% - 10px);
    }
}

/* Particles.js styles */
.background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0; /* Behind the content */
}