class Decoders {
  static decodeBase64(encodedString) {
    try {
      return atob(encodedString);
    } catch (e) {
      console.error("Base64 Decoding Error:", e);
      return null;
    }
  }

  static encodeBase64(decodedString) {
    try {
      return btoa(decodedString);
    } catch (e) {
      console.error("Base64 Encoding Error:", e);
      return null;
    }
  }

  static decodeURIComponentSafe(encodedString) {
    try {
      return decodeURIComponent(encodedString);
    } catch (e) {
      console.error("URI Decoding Error:", e);
      return null;
    }
  }

  static encodeURIComponentSafe(decodedString) {
    try {
      return encodeURIComponent(decodedString);
    } catch (e) {
      console.error("URI Encoding Error:", e);
      return null;
    }
  }
}

export { Decoders };